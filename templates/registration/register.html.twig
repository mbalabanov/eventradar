{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h2>Register</h2>
            <p>You can register any email account fictional or real, or you can <a href="/login">login</a> using the following credentials:</p>
            <div class="alert alert-primary" role="alert">
                User name: user@gmail.com<br/>
                Password: 123123</p>
            </div>
            {{ form_start(registrationForm) }}
                <div class="row mt-2">
                    <div class="col-md-12">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        {{ form_row(registrationForm.plainPassword, { label: 'Password', 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        {{ form_row(registrationForm.agreeTerms, {label: 'Agree to terms', 'attr': {'class': 'mx-2'}}) }}
                    </div>
                </div>
                <p><button type="submit" class="btn btn-primary">Register</button></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
