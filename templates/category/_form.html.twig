{{ form_start(form) }}
<div class="form-group">
    <div class="row my-2">
        <div class="col-md-6">
            {{ form_label(form.name, 'Sports Category Name') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            <small>{{ form_help(form.name) }}</small>
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="col-md-6">
            {{ form_label(form.alias, 'Alias') }}
            {{ form_widget(form.alias, {'attr': {'class': 'form-control'}}) }}
            <small>{{ form_help(form.alias) }}</small>
            <div class="form-error">
                {{ form_errors(form.alias) }}
            </div>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-12">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            <small>{{ form_help(form.description) }}</small>
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>
    </div>
    <p><button class="btn btn-primary">{{ button_label|default('Save') }}</button></p>
</div>
{{ form_end(form) }}
