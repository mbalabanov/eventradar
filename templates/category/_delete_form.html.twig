<form method="post" action="{{ path('category_delete', {'categoryid': category.categoryid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.categoryid) }}">
    <button class="btn btn-danger">Delete</button>
</form>
