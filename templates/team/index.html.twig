{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Teamid</th>
                <th>Name</th>
                <th>Logourl</th>
                <th>Leagueranking</th>
                <th>Description</th>
                <th>League</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.teamid }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.logourl }}</td>
                <td>{{ team.leagueid.name }}</td>
                <td>{{ team.leagueranking }}</td>
                <td>{{ team.description }}</td>
                <td>
                    <a href="{{ path('team_show', {'teamid': team.teamid}) }}">show</a>
                    <a href="{{ path('team_edit', {'teamid': team.teamid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_new') }}">Create new</a>
{% endblock %}
