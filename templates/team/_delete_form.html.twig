<form method="post" action="{{ path('team_delete', {'teamid': team.teamid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.teamid) }}">
    <button class="btn btn-danger">Delete</button>
</form>
