{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Locationid</th>
                <th>Name</th>
                <th>Imageurl</th>
                <th>Maxaudiencecapacity</th>
                <th>Website</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Street</th>
                <th>Streetno</th>
                <th>Postalcode</th>
                <th>City</th>
                <th>Country</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.locationid }}</td>
                <td>{{ location.name }}</td>
                <td>{{ location.imageurl }}</td>
                <td>{{ location.maxaudiencecapacity }}</td>
                <td>{{ location.website }}</td>
                <td>{{ location.phone }}</td>
                <td>{{ location.email }}</td>
                <td>{{ location.street }}</td>
                <td>{{ location.streetno }}</td>
                <td>{{ location.postalcode }}</td>
                <td>{{ location.city }}</td>
                <td>{{ location.countryid.name }}</td>
                <td>{{ location.description }}</td>
                <td>
                    <a href="{{ path('location_show', {'locationid': location.locationid}) }}">show</a>
                    <a href="{{ path('location_edit', {'locationid': location.locationid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('location_new') }}">Create new</a>
{% endblock %}
