<form method="post" action="{{ path('location_delete', {'locationid': location.locationid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.locationid) }}">
    <button class="btn btn-danger">Delete</button>
</form>
