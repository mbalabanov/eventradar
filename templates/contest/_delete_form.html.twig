<form method="post" action="{{ path('contest_delete', {'contestid': contest.contestid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contest.contestid) }}">
    <button class="btn btn-danger">Delete</button>
</form>
