<form method="post" action="{{ path('league_delete', {'leagueid': league.leagueid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ league.leagueid) }}">
    <button class="btn btn-danger">Delete</button>
</form>
