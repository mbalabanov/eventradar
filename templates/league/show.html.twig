{% extends 'base.html.twig' %}

{% block title %}League{% endblock %}

{% block body %}
    <h1>League</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Leagueid</th>
                <td>{{ league.leagueid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ league.name }}</td>
            </tr>
            <tr>
                <th>Logourl</th>
                <td>{{ league.logourl }}</td>
            </tr>
            <tr>
                <th>Foundingyear</th>
                <td>{{ league.foundingyear ? league.foundingyear|date('Y') : '' }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ league.website }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('league_index') }}">back to list</a>

    <a href="{{ path('league_edit', {'leagueid': league.leagueid}) }}">edit</a>

