{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Eventid</th>
                <td>{{ event.eventid }}</td>
            </tr>
            <tr>
                <th>Eventdate</th>
                <td>{{ event.eventdate ? event.eventdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Imageurl</th>
                <td>{{ event.imageurl }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ event.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'eventid': event.eventid}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
