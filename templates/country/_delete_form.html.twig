<form method="post" action="{{ path('country_delete', {'countryid': country.countryid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ country.countryid) }}">
    <button class="btn btn-danger">Delete</button>
</form>
